{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}


{% block body %}

<div class="opinionContainer">


        <div class="opinionSectionAdd">
        <div>
            <h2 class="display-5 m-0 text">Déposez un avis</h2>
        </div>
        <a href="{{ path('app_home') }}" title="Retour à la page d'accueil" class="btnGoBackHome">
            Retour à la page d'accueil
        </a>
    </div>

    <div class="opinionPage">
    
       
         {{ form_start(form) }}


            <div class="mb-3">

                    {{ form_widget(form.avis) }}
                    {{ form_errors(form.avis) }}

            </div>

                <div class="mb-3 opinionStar">

                    {{ form_label(form.score) }}
                    {{ form_widget(form.score) }}
                    {{ form_errors(form.score) }}

                </div>

         {{ form_end(form) }}
    </div>
     
    </div>


{% endblock %}